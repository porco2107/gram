generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

generator pothos {
  provider     = "prisma-pothos-types"
  // Match client output location from above
  clientOutput = "./client"
  output       = "./generated.d.ts"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id     String  @id @map("_id")
  slug   String  @unique
  title  String
  body   String
  userId Int     @unique
  user   User    @relation(fields: [userId], references: [id])
  Photo  Photo[]
}

model User {
  id       Int      @id @map("_id")
  name     String
  role     String
  email    String   @unique
  password String
  comment  Comment?
  photo    Photo?
  post     Post?
}

model Comment {
  id      String @id @map("_id")
  comment String
  postId  String
  userId  Int    @unique
  user    User   @relation(fields: [userId], references: [id])
}

model Photo {
  id     String @id @map("_id")
  url    String
  postId String
  post   Post   @relation(fields: [postId], references: [id])
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id])
}
